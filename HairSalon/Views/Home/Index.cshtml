<h1>Welcome to the Hair Salon</h1>

@if (@Model["stylist"].Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}

<table>
<tr>
  <th><strong>Id</strong></th>
  <th><strong>Stylist Name</strong></th>
</tr>
</table>
@foreach (var stylist in  @Model["stylist"])
{


    <p>@stylist.GetId()</p>
    <p><a href="/stylist/@Model.GetName()/@Model.GetId()"></a></p>

}

<h1>Add a Stylist</h1>

<form action="/" method="post">
  <label for="stylist-name">New Stylist</label>
  <input type="text" name="stylist-name" class="form-control">
  <button type="submit" class="btn" name="button">Add Stylist</button>
</form>

<a href="/stylist/list">View Stylists</a>



